version: '3.8'

services:
  clamav-server:
    image: clamav/clamav
    container_name: clamav-server
    ports:
      - "3310:3310"
    volumes:
      - clamav-db:/var/lib/clamav

  apache2-clamav:
    image: httpd:latest
    container_name: apache2-clamav
    ports:
      - "8080:80"
    volumes:
      - ./www:/var/www/html  # AsegÃºrate de tener un directorio "www" en tu proyecto
      - clamav-db:/var/lib/clamav
    depends_on:
      - clamav-server
    command: >
      sh -c "apt-get update && apt-get install -y clamav clamav-daemon &&
      httpd-foreground"

volumes:
  clamav-db:
